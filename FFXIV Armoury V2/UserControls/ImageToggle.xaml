<UserControl x:Class="FFXIV_Armoury_V2.UserControls.ImageToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFXIV_Armoury_V2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="imageToggle">
    <Grid>
        <Image Name="ToggleImage"
               Source="{Binding ElementName=imageToggle, Path=UntoggledImage}"
               Width="20"
               Height="20"
               ToolTip="{Binding ElementName=imageToggle, Path=Tooltip}"/>
    </Grid>
</UserControl>
