<UserControl x:Class="FFXIV_Armoury_V2.MVVM.View.CurrentCharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fModel="clr-namespace:FFXIV_Armoury_V2.MVVM.Model"
             xmlns:local="clr-namespace:FFXIV_Armoury_V2.MVVM.View"
             xmlns:viewModel="clr-namespace:FFXIV_Armoury_V2.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:CurrentCharacterViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Rectangle Width="100"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="-40, 0, 0, 0"
                   HorizontalAlignment="Left"
                   StrokeThickness="3">
            <Rectangle.RenderTransform>
                <SkewTransform CenterX="0"
                               CenterY="0"
                               AngleX="-5"
                               AngleY="0" />
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour1}" Offset="0.0" />
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour2}" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
            <Rectangle.Stroke>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour2}" Offset="0.0" />
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour1}" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Stroke>
            
        </Rectangle>

        <Image HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Source="{Binding CurrentCharacter.Avatar}"
                   Height="96"
                   x:Name="characterPortrait"
                   Grid.Column="1"
                   Stretch="UniformToFill"
                   Panel.ZIndex="-1"
                   RenderOptions.BitmapScalingMode="Fant">
        </Image>

        <Rectangle Grid.Column="2"
                   Grid.ColumnSpan="3"
                   Margin="0, 0, -50, 0"
                   StrokeThickness="3">
            <Rectangle.RenderTransform>
                <SkewTransform CenterX="0"
                               CenterY="0"
                               AngleX="-5"
                               AngleY="0" />
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour1}" Offset="0.0" />
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour2}" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
            <Rectangle.Stroke>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour2}" Offset="0.0" />
                    <GradientStop Color="{Binding CurrentCharacter.ActiveClassJob.Colour1}" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>

        <StackPanel VerticalAlignment="Center"
                    Grid.Column="2"
                    Margin="15">
            <TextBlock VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="22"
                   Text="{Binding CurrentCharacter.Name}"/>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                <TextBlock VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="12"
                   Text="{Binding CurrentCharacter.ServerDc}"/>
            </StackPanel>
        </StackPanel>

        <Image Source="/Images/Icons/Healers/AST.png"
               Grid.Column="4"
               Width="175"
               Height="175"
               Margin="0, -25, 0, 0"
               HorizontalAlignment="Right"
               Opacity="0.1"/>

        <!--#region ClassJobs -->
        <Grid Grid.Column="3"
              Grid.ColumnSpan="2"
              HorizontalAlignment="Center"
              Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--#region Tanks -->
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Source="{Binding CurrentCharacter.ClassJobs[0].JobIcon}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Text="{Binding CurrentCharacter.ClassJobs[0].Level}" />
            <Image Grid.Row="0"
                   Grid.Column="1"
                   Source="{Binding CurrentCharacter.ClassJobs[1].JobIcon}" />
