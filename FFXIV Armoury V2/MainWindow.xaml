<Window x:Class="FFXIV_Armoury_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIV_Armoury_V2"
        xmlns:viewModel="clr-namespace:FFXIV_Armoury_V2.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="FFXIV Armoury" Height="600" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0"
                                 EndPoint="0.5,1">
                <GradientStop Color="#595759" Offset="0.0" />
                <GradientStop Color="#282728" Offset="0.025" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0"
                            Grid.Column="0"
                            Margin="10"
                            Content="{Binding LoginView}" />

            <StackPanel Grid.Row="1"
                        Grid.Column="0">
                <RadioButton Content="Gear List"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             IsChecked="True"
                             Style="{StaticResource MainMenuButtonTheme}"
                             Command="{Binding GearListVewCommand}"/>
                <RadioButton Content="Character Info"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MainMenuButtonTheme}"
                             Command="{Binding CharacterInfoVewCommand}"/>
            </StackPanel>

            <TextBox Grid.Row="0"
                       Grid.Column="1"
                       Width="300"
                       Height="40"
                       Margin="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}" />
        </Grid>
    </Border>
</Window>
